<div class="container">
    <div class="row">
        <div class="col-sm"></div>
        <div class="col-sm-4">
            <form action="/listHome" method="POST">
                <input type="hidden" name="homeID" value="{{home}}">
                <div class="form-group">
                    <label for="make" class="marginTop">Animal</label>
                    <input type="text" name="make" id="make" class="form-control">
                </div>

                <div class="form-group">
                    <label for="model">My e-mail</label>
                    <input type="text" name="model" id="model" class="form-control">
                </div>

                <div class="form-group">
                    <label for="year">Experince in years</label>
                    <input type="number" name="year" id="year" class="form-control">
                </div>

                <div class="form-group">
                    <label for="pricePerHour">Price per hour</label>
                    <input type="number" name="pricePerHour" id="pricePerHour" class="form-control">
                </div>

                <div class="form-group">
                    <label for="pricePerWeek">Price per week</label>
                    <input type="number" name="pricePerWeek" id="pricePerWeek" class="form-control">
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary" style="background-color: #11999e">List a home</button>
                </div>

            </form>
        </div>
        <div class="col-sm"></div>
    </div>
</div>


<style>
    body {
        background-color: #fde2e2;
        color: #3b6978;
        font-family: "Montserrat", sans-serif;
